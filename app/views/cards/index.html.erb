<p id="notice"><%= notice %></p>

<h1>Cards</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>List</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cards.each do |card| %>
      <tr>
        <td><%= card.title %></td>
        <td><%= card.list.name %></td>
        <td><%= link_to 'Show L', table_list_path(@list.table, @list) %></td>
        <td><%= link_to 'Edit C', edit_table_list_card_path(@list.table, @list, card) %></td>
        <td><%= link_to 'Destroy C', table_list_card_path(@list.table, @list, card), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Card', new_table_list_card_path(@list) %>
